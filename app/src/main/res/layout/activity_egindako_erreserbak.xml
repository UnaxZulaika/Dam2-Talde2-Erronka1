<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Egindako_Erreserbak">


   <!-- HEADER -->
    <LinearLayout
        android:id="@+id/loginBanner"
        android:layout_width="411sp"
        android:layout_height="125sp"
        android:background="@color/verdePastel"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <!-- Banner logo -->

        <Button
            android:id="@+id/IdBtnMenuZabaldu"
            android:layout_width="61sp"
            android:layout_height="53sp"
            android:layout_gravity="center"
            android:foreground="@drawable/menu" />

        <ImageView
            android:id="@+id/loginBannerLogo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/menLogoDeskripzioa"
            android:layout_weight="1"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/logo_oma" />

    </LinearLayout>
    <!-- header fin 1 -->

    <!-- CONTENT -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EGINDAKO RESERVAK(RESERVAS)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginBanner" />


    <!-- INSIDE HEADER -->
    <LinearLayout
        android:id="@+id/idLayOpzioak"
        android:layout_width="265sp"
        android:layout_height="match_parent"
        android:background="@color/verdePastel"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <!-- ITXI -->
        <Button
            android:id="@+id/idBtnMenuItxi"
            android:layout_width="61sp"
            android:layout_height="53sp"
            android:layout_marginStart="3sp"
            android:layout_marginTop="36sp"
            android:backgroundTint="#00FFFFFF"
            android:foreground="@android:drawable/ic_menu_close_clear_cancel" />

        <!-- nire kontua(Nire_Kontua) -->
        <Button
            android:id="@+id/idBtnMenuKontua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:backgroundTint="#00FFFFFF"
            android:text="@string/menKontua"
            android:textAlignment="viewStart"
            android:textAllCaps="true" />

        <!-- erreserbak(Egindako_Erreserbak) -->
        <Button
            android:id="@+id/idBtnMenuErreserbak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:backgroundTint="#00FFFFFF"
            android:text="@string/menErreserbak"
            android:textAlignment="viewStart"
            android:textAllCaps="true" />

    </LinearLayout>
    <!-- inside header fin -->
   <!-- header fin -->
</androidx.constraintlayout.widget.ConstraintLayout>
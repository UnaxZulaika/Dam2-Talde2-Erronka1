<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    tools:context=".erreserbak">

  <!-- HEADER -->
    <HorizontalScrollView
        android:layout_width="match_parent"

        android:layout_height="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginBanner"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button" />
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/loginBanner"
        android:layout_width="411sp"
        android:layout_height="125sp"
        android:background="@color/verdePastel"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <!-- Banner logo -->

        <Button
            android:id="@+id/IdBtnMenuZabaldu"
            android:layout_width="61sp"
            android:layout_height="53sp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:foreground="@drawable/menu" />

        <ImageView
            android:id="@+id/loginBannerLogo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/menLogoDeskripzioa"
            android:layout_weight="1"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/logo_oma" />

    </LinearLayout>

  <!-- INSIDE HEADER -->

    <LinearLayout
        android:id="@+id/idLayOpzioak"
        android:layout_width="265sp"
        android:layout_height="match_parent"
        android:background="@color/verdePastel"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <!-- ITXI -->

        <Button
            android:id="@+id/idBtnMenuItxi"
            android:layout_width="61sp"
            android:layout_height="53sp"
            android:layout_marginStart="3sp"
            android:layout_marginTop="36sp"
            android:backgroundTint="#00FFFFFF"
            android:background="@android:color/transparent"
            android:foreground="@android:drawable/ic_menu_close_clear_cancel" />

        <!-- nire kontua(Nire_Kontua) -->
        <Button
            android:id="@+id/idBtnMenuKontua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:backgroundTint="#00FFFFFF"
            android:text="@string/menKontua"
            android:textAlignment="viewStart"
            android:textAllCaps="true"
            android:layout_marginLeft="5sp"
            android:background="@android:color/transparent"/>

        <!-- erreserbak(Egindako_Erreserbak) -->
        <Button
            android:id="@+id/idBtnMenuErreserbak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:backgroundTint="#00FFFFFF"
            android:text="@string/menErreserbak"
            android:textAlignment="viewStart"
            android:background="@android:color/transparent"
            android:layout_marginLeft="5sp"
            android:textAllCaps="true" />

        <Button
            android:id="@+id/idBtnPribatutasunPolitikak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:backgroundTint="#00FFFFFF"
            android:text="@string/menPribatutasunPolitikak"
            android:textAlignment="viewStart"
            android:background="@android:color/transparent"
            android:layout_marginLeft="5sp"
            android:textAllCaps="true" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="445dp" />

        <Button
            android:id="@+id/btnEmpresaInsta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:foreground="@drawable/logo_oma" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>